<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <div class="mt-2">
      <%= link_to "Edit this garden", edit_garden_path(@garden), class: "btn btn-primary" %>
      <%= link_to "Back to gardens", gardens_path, class: "btn btn-secondary" %>
      <%= link_to "Delete", garden_path(@garden), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Sure??" } %>
    </div>
  </div>
</div>
<div class="container mt-4 d-flex flex-column gap-4">
  <% @plants.each do |plant| %>
    <div class="card-product">
      <img src="<%= plant.image_url %>" />
      <div class="card-product-infos d-flex flex-grow-1 justify-content-between align-items-center">
        <div>
          <h2><%= plant.name %></h2>
          <p>
            <% plant.tags.each do |tag| %>
              <span><%= tag.name %></span>
            <% end %>
          </p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to "Tag", new_plant_tagging_path(plant), class: "btn btn-info"  %>
          <%= link_to "Delete", plant_path(plant), class: "btn btn-danger", data: { turbo_method: :delete }  %>
        </div>
      </div>
    </div>
  <% end %>
</div>
